ParesFib = []
def fib(n):
    if n == 0:
        return 0
    if n == 1:
        return 1
    return fib(n-1) + fib(n-2)
for x in range(35):
	if fib(x)<4000000 and fib(x)%2 == 0 and fib(x)!=0:
		ParesFib.append(fib(x))
#print ParesFib
suma = 0
for i in ParesFib:
	suma += i
print "La Suma de los números pares de la sucesión de Fibonacci menores a 4000000 es de", suma
